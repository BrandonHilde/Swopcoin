    <!-- Place new controls here -->
    <ContentPage.Content>
        <StackLayout>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="70" />
                    <RowDefinition Height="40" />
                    <RowDefinition Height="100" />
                    <RowDefinition Height="60" />
                    <RowDefinition Height="60" />
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>


                <Label Grid.Row="0" Grid.Column="0" Text="Swop Exchange Wallet"  Margin="10"
           HorizontalOptions="Start"
           VerticalOptions="Start" />
                <Label Grid.Row="1" Grid.Column="0" Text="Send And Exchange" TextColor="DarkSlateBlue" Margin="5" HorizontalOptions="Center" VerticalOptions="Start"></Label>
                <StackLayout Grid.Row="2" Grid.Column="0" Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="Center" Spacing="40" Margin="10" >
                    <BoxView WidthRequest="100" HeightRequest="100" Color="LightSeaGreen"></BoxView>
                    <BoxView WidthRequest="100" HeightRequest="100" x:Name="boxView" Color="DarkSlateBlue" ></BoxView>
                </StackLayout>
            </Grid>
            
            <!--<ListView Margin="20" x:Name="curencyList" VerticalOptions="End" HorizontalOptions="Center" ItemsSource="{Binding Data}" >
                <ListView.ItemTemplate>
